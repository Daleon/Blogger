<h1>All Comments</h1>

<ul id="comments">
  <% @comments.each do |comment| %>
  <li>
    <%= link_to comment.author_name, article_path(comment),
     class: 'comment_title', id: "comment_#{comment.id}" %>
  </li>
  <% end %>
</ul>

<%= link_to "Create a New Comment", new_comment_path, class: "new_comment" %>
